%p
  %b Image:
  %br
  - unless @item.image.url.nil?
    = image_tag @item.image.url, height: '100'
%p
  %b Title:
  = @item.title
%p
  %b Price:
  = number_to_currency @item.price
%p
  %b Category:
  = @item.category.name
%p
  %b Date:
  = @item.date
%p
  %b Description:
  = @item.description

= link_to 'Edit', edit_item_path(@item), class: "btn btn-primary"
= link_to 'Back', items_path, class: "btn btn-primary"
